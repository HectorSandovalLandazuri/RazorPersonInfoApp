@page
@model RazorPersonInfo.Pages.AddressesModel
@{
	ViewData["Title"] = "Addresses";
}
<h1>Addresses</h1>

<form method="post">
	<div class="form-group">
		<label asp-for="Address.StreetAddress">Street Address</label>
		<input type="text" asp-for="Address.StreetAddress" />
	</div>
	<div class="form-group">
		<label asp-for="Address.City">City</label>
		<input type="text" asp-for="Address.City" />
	</div>
	<div class="form-group">
		<label asp-for="Address.State">State</label>
		<input type="text" asp-for="Address.State" />
	</div>
	<div class="form-group">
		<label asp-for="Address.PostalCode">Postal Code</label>
		<input type="text" asp-for="Address.PostalCode" />
	</div>

	<button type="submit" class="btn btn-primary">Submit</button>


</form>

