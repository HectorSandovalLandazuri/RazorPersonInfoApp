@page
@model RazorPersonInfo.Pages.PeopleModel
@{
	ViewData["Title"] = "People";
}
<h1>People</h1>

<form method="post">
	<div class="form-group">
		<label asp-for="Person.FirstName">First Name</label>
		<input type="text" asp-for="Person.FirstName" />
	</div>
	<div class="form-group">
		<label asp-for="Person.LastName">Last Name</label>
		<input type="text" asp-for="Person.LastName" />
	</div>
	<div class="form-group">
		<input type="checkbox" asp-for="Person.IsActive" />
		<label asp-for="Person.IsActive">Active</label>
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>


</form>